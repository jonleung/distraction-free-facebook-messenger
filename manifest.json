{
  "manifest_version": 2,

  "name": "Distraction Free Facebook Messenger",
  "description": "Remove all temptation from Facebook Messenger",
  "version": "0.5.6",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "https://www.facebook.com/*"
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com https://cdn.mxpnl.com/libs/mixpanel-2-latest.min.js; object-src 'self'",
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "browser_action": {
    "default_title": "Just Messenger"
  },
  "icons": {
    "19": "images/icon19.png",
    "38": "images/icon38.png",
    "48": "images/icon48.png",
    "64": "images/icon64.png",
    "128": "images/icon128.png"
  }
}
